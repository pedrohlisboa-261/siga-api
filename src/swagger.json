{
  "openapi": "3.0.0",
  "info": {
    "title": "SIGA API Mensageria - Documentação",
    "description": "API auxiliar para o projeto SIGA",
    "version": "1.0.0",
    "contact": {
      "email": "roberto.oliveira@nepen.org.br"
    }
  },
  "paths": {
    "/solicitacoes": {
      "get": {
        "tags": [
          "Solicitação"
        ],
        "summary": "Buscar solicitações",
        "description": "Buscar solicitações pelo código da nota ou telefone",
        "parameters": [
          {
            "in": "query",
            "name": "empresaOperadora",
            "required": true,
            "schema": {
              "type": "integer",
              "enum": [82, 86, 95, 98],
              "example": 98
            }
          },
          {
            "in": "query",
            "name": "contaContrato",
            "required": true,
            "schema": {
              "type": "string",
              "maxLength": 12,
              "example": "000012345678"
            }
          },
          {
            "in": "query",
            "name": "codigoNota",
            "schema": {
              "type": "string",
              "maxLength": 12,
              "example": "001234567898"
            }
          },
          {
            "in": "query",
            "name": "telefone",
            "schema": {
              "type": "string",
              "minLength": 10,
              "maxLength": 11,
              "example": "9899999999"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "DATA_SOLICITACAO": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "ID_CONVERSA": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "SESSAO": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "EMPRESA": {
                        "type": "string",
                        "example": "EQTL MA"
                      },
                      "CONTA_CONTRATO": {
                        "type": "string",
                        "example": "0000123456"
                      },
                      "TELEFONE": {
                        "type": "string",
                        "example": "9888888888"
                      },
                      "TELEFONE_9": {
                        "type": "string",
                        "example": "98988888888"
                      },
                      "CODIGO_SR": {
                        "type": "string",
                        "example": "8948392039"
                      },
                      "CODIGO_NOTA": {
                        "type": "string",
                        "example": "001345678987"
                      },
                      "CANAL": {
                        "type": "string",
                        "example": "whatsapp"
                      },
                      "REGIONAL": {
                        "type": "string",
                        "example": "LESTE"
                      },
                      "MUNICIPIO": {
                        "type": "string",
                        "example": "SAO LUIS"
                      },
                      "TIPO_SOLICITACAO": {
                        "type": "string",
                        "example": "Falta de Energia"
                      },
                      "TOTAL_SOLICITACOES": {
                        "type": "number",
                        "example": 1
                      },
                      "SESSAO_ATIVA": {
                        "type": "boolean",
                        "example": true
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requisição Inválida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Validation error"
                    },
                    "message": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "example": "empresaOperadora is not allowed to be empty"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mensagens/iniciar": {
      "post": {
        "tags": ["Mensagem"],
        "summary": "Enviar Link SIGA",
        "description": "Enviar link de acompanhamento para o cliente final",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "empresaOperadora": {
                    "type": "string",
                    "required": true,
                    "enum": ["82", "86", "95", "98"],
                    "example": "98"
                  },
                  "contaContrato": {
                    "type": "string",
                    "required": true,
                    "maxLength": 12,
                    "example": "000000002828"
                  },
                  "codigoNota": {
                    "type": "string",
                    "required": true,
                    "maxLength": 12,
                    "example": "000012345678"
                  },
                  "tipoSolicitacao": {
                    "type": "string",
                    "required": true,
                    "example": "Falta de energia"
                  },
                  "link": {
                    "type": "string",
                    "required": true,
                    "example": "http://www.equatorial.com.br/acompanhamento/Kjskwpjdsdf12"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucesso"
          },
          "400": {
            "description": "Requisição Inválida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Validation error"
                    },
                    "message": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "example": "empresaOperadora is not allowed to be empty"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}